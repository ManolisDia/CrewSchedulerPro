package com.CrewSchedulerPro.Back.Service;

import com.CrewSchedulerPro.Back.Model.CrewmanLogIn;
import com.CrewSchedulerPro.Back.Model.ShiftAssignment;
import com.CrewSchedulerPro.Back.Model.Shifts;
import com.CrewSchedulerPro.Back.Repository.ShiftAssignmentRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;
import java.util.stream.Collectors;

@Service
public class ShiftAssignmentServiceImpl implements ShiftAssignmentService {

    @Autowired
    private ShiftAssignmentRepository shiftAssignmentRepository;

    @Override
    public List<Shifts> findShiftsByCrewmanLogin(CrewmanLogIn crewmanLogin) {
        List<ShiftAssignment> assignments = shiftAssignmentRepository.findByCrewmanLoginId(crewmanLogin.getId());
        return assignments.stream()
                .map(ShiftAssignment::getShift)
                .collect(Collectors.toList());
    }

    @Override
    public void assignShift(CrewmanLogIn crewmanLogin, Shifts shift) {
        ShiftAssignment assignment = new ShiftAssignment(crewmanLogin, shift);
        shiftAssignmentRepository.save(assignment);
    }
}